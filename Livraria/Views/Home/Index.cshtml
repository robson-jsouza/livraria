@{
    ViewBag.Title = "Home Page";
}

<div data-ng-controller="LivroController" class="row">
    <div class="col-md-3">
        <h3>
            Livro
        </h3>
        <div class="form-group">
            <label>
                <span>*</span>
                <span>Título</span>
                <input class="form-control"
                       maxlength="100"
                       data-ng-model="livroEmEdicao.Titulo" />
            </label>
        </div>
        <div class="form-group">
            <label>
                <span>*</span>
                <span>Nome do autor</span>
                <input class="form-control"
                       maxlength="100"
                       data-ng-model="livroEmEdicao.NomeAutor" />
            </label>
        </div>
        <div class="form-group">
            <label>
                <span>*</span>
                <span>Assunto</span>
                <input class="form-control"
                       maxlength="150"
                       data-ng-model="livroEmEdicao.Assunto" />
            </label>
        </div>
        <div class="form-group">
            <label>
                <span>Editora</span>
                <input class="form-control"
                       maxlength="150"
                       data-ng-model="livroEmEdicao.Editora" />
            </label>
        </div>
        <div class="form-group">
            <label>
                <span>Ano de publicação</span>
                <input type="number" class="form-control"
                       max="9999"
                       data-ng-model="livroEmEdicao.AnoPublicacao" />
            </label>
        </div>

        <div class="btn-group">
            <button class="btn btn-primary" type="button" data-ng-click="salvar()">
                Salvar
            </button>
        </div>
        <div class="btn-group" data-ng-hide="agentInEdition.Id">
            <button class="btn" type="button" data-ng-click="cancelar()">
                Cancelar
            </button>
        </div>
    </div>
    <div class="col-md-9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Nome do autor</th>
                    <th>Assunto</th>
                    <th>Editora</th>
                    <th>Ano de publicação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="livro in livros">
                    <td>{{livro.Titulo}}</td>
                    <td>{{livro.NomeAutor}}</td>
                    <td>{{livro.Assunto}}</td>
                    <td>{{livro.Editora}}</td>
                    <td>{{livro.AnoPublicacao}}</td>
                    <td class="actions">
                        <button class="btn btn-default" data-ng-click="editar(livro)" title="Editar">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                        <button class="btn btn-default" data-ng-click="remover(livro)" title="Remover">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>